<body>

<%- include('./partials/nav.ejs') %>

<form method="POST" action="/register" class="register">
    <h2>Register</h2>
    <div class="error"></div>
    <input type="text" name="fname" placeholder="First name">
    <input type="text" name="lname" placeholder="Last name">
